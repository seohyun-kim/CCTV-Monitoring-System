              $('#addForm').append("<input id='selectDate' type='date'>");
              $('#addForm').append("<button type='button' id='dateSelectBtn2'>제출 </button>")
            }
            // "기간 조회" 버튼 클릭 시 date form 2개 생성
              function termInput(){
                $('#sumPeople').text(' ');
                $('#sumVehicle').text(' ');
